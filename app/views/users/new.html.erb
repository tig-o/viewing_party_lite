<h1>Viewing Party Light<h1>
<h2> Register New User </h2>
<%= link_to "Home", root_path, method: :get %><br><br>

<%= form_with url: '/users', method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br><br>
  <%= f.label :password %>
  <%= f.text_field :password %>
  <%= f.label :password_conf, 'Password Confirmation' %>
  <%= f.text_field :password_conf %>
  <%= f.submit 'Register New User' %>
<% end %>